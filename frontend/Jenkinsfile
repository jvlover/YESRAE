pipeline {
	agent any

	tools {
		nodejs "nodejs"
	}

	stages {
		stage('React Build') {
			steps {
				dir('frontend') {
					sh 'npm install -g pnpm'
					sh 'pnpm install'
                    sh 'pnpm run build'
				}
			}
		}

		stage('Docker Build') {
			steps {
				dir('frontend') {
					sh 'docker build -t yesrae_frontend:latest .'
				}
			}
		}

		stage('Deploy') {
			steps{
				sh 'docker rm -f front'
				sh 'docker run -d --name front -p 3126:3126 -u root yesrae_frontend:latest'
				}
		}

		stage('Finish') {
			steps{
				sh 'docker images -qf dangling=true | xargs -I{} docker rmi {}'
			}
		}
	}
}